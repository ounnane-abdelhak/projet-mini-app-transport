<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="transport.control.UserManagementScreenController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" bottom="10.0" left="20.0" right="20.0" />
            </padding>
            <Label text="User &amp; Fare Medium Management">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <TabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Add User">
                    <content>
                        <VBox spacing="10.0" alignment="TOP_LEFT">
                            <padding><Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/></padding>
                            <Label text="User Type:"/>
                            <ChoiceBox fx:id="userTypeChoiceBox" prefWidth="150.0"/>
                            <GridPane hgap="10.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                </columnConstraints>
                                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                                <Label text="PrÃ©nom:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                                <Label text="Date of Birth (YYYY-MM-DD):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <DatePicker fx:id="dateNaissancePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                                <CheckBox fx:id="handicapCheckBox" text="Handicap" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                <!-- Employee specific fields (initially hidden) -->
                                <Label fx:id="matriculeLabel" text="Matricule:" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="false"/>
                                <TextField fx:id="matriculeField" GridPane.rowIndex="4" GridPane.columnIndex="1" visible="false"/>
                                <Label fx:id="fonctionLabel" text="Fonction:" GridPane.rowIndex="5" GridPane.columnIndex="0" visible="false"/>
                                <ChoiceBox fx:id="fonctionChoiceBox" GridPane.rowIndex="5" GridPane.columnIndex="1" visible="false" prefWidth="150.0"/>
                            </GridPane>
                            <Button fx:id="addUserButton" onAction="#handleAddUser" text="Add User" />
                            <Label fx:id="userStatusLabel"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Purchase Fare Medium">
                    <content>
                        <VBox spacing="10.0" alignment="TOP_LEFT">
                            <padding><Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/></padding>
                            <Label text="Select User (Passenger):"/>
                            <ComboBox fx:id="userComboBoxPurchase" prefWidth="250.0"/>
                            <Label text="Fare Type:"/>
                            <ChoiceBox fx:id="fareTypeChoiceBox" prefWidth="150.0"/>
                             <!-- Card specific fields (initially hidden) -->
                            <Label fx:id="cardTypeLabel" text="Card Type:" visible="false"/>
                            <ChoiceBox fx:id="cardTypeChoiceBox" prefWidth="150.0" visible="false"/>
                            <Button fx:id="purchaseFareButton" onAction="#handlePurchaseFare" text="Purchase Fare" />
                            <Label fx:id="purchaseStatusLabel"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <Button fx:id="backToMenuButton" onAction="#handleBackToMenu" text="Back to Main Menu" />
        </HBox>
    </bottom>
</BorderPane>

