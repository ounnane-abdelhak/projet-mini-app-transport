<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="transport.control.ComplaintScreenController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" bottom="10.0" left="20.0" right="20.0" />
            </padding>
            <Label text="Complaint Management (Bonus)">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <TabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Register Complaint">
                    <content>
                        <VBox spacing="10.0" alignment="TOP_LEFT">
                            <padding><Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/></padding>
                            <GridPane hgap="10.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                                </columnConstraints>
                                <Label text="Reporting Person (User/Emp):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <ComboBox fx:id="reportingPersonComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250.0" />
                                
                                <Label text="Complaint Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <ChoiceBox fx:id="complaintTypeChoiceBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="150.0" />
                                
                                <Label text="Concerned Entity Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <ChoiceBox fx:id="entityTypeChoiceBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="150.0" />
                                
                                <Label fx:id="concernedEntityLabel" text="Concerned Entity:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                <ComboBox fx:id="concernedEntityComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="250.0" />
                                
                                <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                                <TextArea fx:id="descriptionTextArea" GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="100.0" wrapText="true"/>
                            </GridPane>
                            <Button fx:id="registerComplaintButton" onAction="#handleRegisterComplaint" text="Register Complaint" />
                            <Label fx:id="complaintStatusLabel" />
                        </VBox>
                    </content>
                </Tab>
                <Tab text="View Complaints">
                    <content>
                        <VBox spacing="10.0" alignment="TOP_LEFT">
                            <padding><Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/></padding>
                            <ListView fx:id="complaintsListView" prefHeight="300.0"/>
                            <Button fx:id="refreshComplaintsButton" onAction="#handleRefreshComplaints" text="Refresh Complaints List"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <Button fx:id="backToMenuButton" onAction="#handleBackToMenu" text="Back to Main Menu" />
        </HBox>
    </bottom>
</BorderPane>

